<resources>
    <!-- Base application theme. -->
    <style name="Theme.IndonesianFauna" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_amber</item>
        <item name="colorPrimaryVariant">@color/dark_amber</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorBgCardView">@color/light_amber</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>

    <style name="content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="content.text_center">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="content.text_size">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="content_wrap.text_size.column_data">
        <item name="android:layout_weight">1</item>
    </style>


    <style name="content_full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="content_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="content_wrap.text_size">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="content_wrap.text_size.column_name">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="content.margin_horizontal">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="content_full.margin_horizontal">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="margin_horizontal">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="rounded">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="rounded.corners">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="rounded.circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="splash_theme" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
    </style>


</resources>